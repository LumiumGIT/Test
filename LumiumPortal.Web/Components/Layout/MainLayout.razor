@inherits LayoutComponentBase
@inject IJSRuntime JsRuntime

<MudThemeProvider Theme="@_customTheme" IsDarkMode="@_isDarkMode" @ref="@_mudThemeProvider"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <TopBar OnDrawerToggle="ToggleDrawer" OnThemeToggle="ToggleTheme" IsDarkMode="@_isDarkMode"/>

    <MudDrawer @bind-Open="_drawerOpen" 
               ClipMode="DrawerClipMode.Always" 
               Elevation="2">
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>